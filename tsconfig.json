{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "target": "es2021",
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "lib/*": [
        "src/lib/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
